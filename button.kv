#:kivy 1.0.9
<widget_button>:
    canvas:
        Rectangle:
            source: "background.png"
            size: (1000000000, 1000000000)
    count: 0
    orientation: "vertical"
    padding: 10
    Label:
        text: "Play!"
        pos: root.center_x-100, root.center_y+100
    Button:
        text: "Play!"
        on_press: app.stop()
        pos: root.center_x-100 , root.center_y
    Label:
        text: "Exit"
        pos: root.center_x, root.center_y+100
    Button:
        text: "Exit"
        on_press: quit()
        pos: root.center_x, root.center_y