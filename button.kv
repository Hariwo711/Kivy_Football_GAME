#:kivy 1.0.9
<widget_button>:
    count: 0
    orientation: "vertical"
    padding: 10
    Label:
        text: "Play!"
        pos: root.center_x -50, root.center_y
    Button:
        on_press: app.stop()

<widget_button>:
    count: 0
    orientation: "vertical"
    padding: 10
    Label:
        text: "Exit"
        pos: root.center
    Button:
        on_press: quit()

